{# home-page-render.html.twig #}

{# Get hero data from 'hero' block content type #}
{% set hero = get_hero_tailwind() %}

{# Hero Section #}
{% if hero.title %}
<section id="hero" class="bg-[#050322]">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-16 lg:py-24 grid gap-12 lg:grid-cols-2 items-center">
    <!-- Text -->
    <div class="space-y-6 text-white">
      {% if hero.eyebrow %}
        <p class="text-xs font-semibold tracking-[0.25em] uppercase text-obYellow">{{ hero.eyebrow }}</p>
      {% endif %}
      {% if hero.title %}
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold leading-tight">
          {{ hero.title }}
        </h1>
      {% endif %}
      {% if hero.description %}
        <div class="text-sm sm:text-base text-slate-200 max-w-xl">
          {{ hero.description|raw }}
        </div>
      {% endif %}

      <div class="flex flex-wrap gap-3">
        {% if hero.primary_link_url %}
          <a href="{{ hero.primary_link_url }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full border border-white text-sm font-semibold text-white hover:bg-white hover:text-[#050322] transition-colors">
            {{ hero.primary_link_title|default('Scopri di più') }}
            <span aria-hidden="true">→</span>
          </a>
        {% endif %}
        {% if hero.secondary_link_url %}
          <a href="{{ hero.secondary_link_url }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full border border-white/50 text-sm font-semibold text-white/80 hover:bg-white/10 transition-colors">
            {{ hero.secondary_link_title }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Visual certificate card or illustration -->
    <div class="relative">
      {% if hero.image_url %}
        <div class="rounded-3xl overflow-hidden shadow-2xl">
          <img src="{{ hero.image_url }}" alt="{{ hero.title }}" class="w-full h-auto" />
        </div>
      {% else %}
        <img src="/themes/custom/tailwind/images/public/img_1.png" alt="Open Badge Certificate" class="w-full h-auto rounded-3xl shadow-2xl" />
      {% endif %}
    </div>
  </div>
</section>
{% if hero.link_edit %}
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-2">
    {{ hero.link_edit }}
  </div>
{% endif %}
{% endif %}

