{# home-page-render.html.twig #}

{# Get hero data from 'hero' block content type #}
{% set hero = get_hero_tailwind() %}

{# Hero Section #}
{% if hero.title %}
<section id="hero" class="bg-[#050322]">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-16 lg:py-24 grid gap-12 lg:grid-cols-2 items-center">
    <!-- Text -->
    <div class="space-y-6 text-white">
      {% if hero.eyebrow %}
        <p class="text-xs font-semibold tracking-[0.25em] uppercase text-obYellow">{{ hero.eyebrow }}</p>
      {% endif %}
      {% if hero.title %}
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold leading-tight">
          {{ hero.title }}
        </h1>
      {% endif %}
      {% if hero.description %}
        <div class="text-sm sm:text-base text-slate-200 max-w-xl">
          {{ hero.description|raw }}
        </div>
      {% endif %}

      <div class="flex flex-wrap gap-3">
        {% if hero.primary_link_url %}
          <a href="{{ hero.primary_link_url }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full border border-white text-sm font-semibold text-white hover:bg-white hover:text-[#050322] transition-colors">
            {{ hero.primary_link_title|default('Scopri di più') }}
            <span aria-hidden="true">→</span>
          </a>
        {% endif %}
        {% if hero.secondary_link_url %}
          <a href="{{ hero.secondary_link_url }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full border border-white/50 text-sm font-semibold text-white/80 hover:bg-white/10 transition-colors">
            {{ hero.secondary_link_title }}
          </a>
        {% endif %}
      </div>
    </div>

    <!-- Visual certificate card or illustration -->
    <div class="relative">
      {% if hero.image_url %}
        <div class="rounded-3xl overflow-hidden shadow-2xl">
          <img src="{{ hero.image_url }}" alt="{{ hero.title }}" class="w-full h-auto" />
        </div>
      {% else %}
        <img src="/themes/custom/tailwind/images/public/img_1.png" alt="Open Badge Certificate" class="w-full h-auto rounded-3xl shadow-2xl" />
      {% endif %}
    </div>
  </div>
</section>
{% if hero.link_edit %}
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-2">
    {{ hero.link_edit }}
  </div>
{% endif %}
{% endif %}

<div class="home-page-render">
     <!-- ========================================= -->

  <section id="certificati-riconosciuti" class="bg-[#e4f4f7] py-16 lg:py-20">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 space-y-10">
          {# Admin edit link #}
          {% if data.home_edit %}
            <div class="mb-4">
              {{ data.home_edit }}
            </div>
          {% endif %}
          
          {# Dynamic content from Blocco Home #}
          {% if data.home_section %}
            <div class="text-center mb-8 relative">
              {# Edit button in corner #}
              {% if data.home_section.link_edit %}
                <div class="absolute -top-2 -right-2 z-50">
                  <div class="bg-red-500 text-slate-900 underline px-3 py-1 rounded text-xs font-bold shadow-lg hover:bg-red-600 transition-colors">
                    {{ data.home_section.link_edit }}
                  </div>
                </div>
              {% endif %}
              
              {% if data.home_section.sub_title %}
                <p class="text-xs font-semibold tracking-[0.25em] uppercase text-slate-500 mb-3">
                  {{ data.home_section.sub_title[0]['value'] }}
                </p>
              {% endif %}
              {% if data.home_section.titolo %}
                <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-slate-900 mb-4">
                  {{ data.home_section.titolo[0]['value'] }}
                </h2>
              {% endif %}
              {% if data.home_section.body %}
                <div class="text-sm sm:text-base text-slate-700">
                  {{ data.home_section.body[0]['value']|raw }}
                </div>
              {% endif %}
            </div>
         
          {% endif %}

          <div class="bg-white rounded-3xl shadow-md px-4 py-4 sm:px-8 sm:py-5 relative">
            {# Navigation Buttons #}
            <div class="flex justify-end gap-3 mb-4 relative z-10">
              <button type="button" id="carousel-prev" class="w-10 h-10 rounded-full bg-slate-100 hover:bg-slate-200 flex items-center justify-center transition-colors cursor-pointer relative z-10" aria-label="Previous slide">
                <svg class="w-6 h-6 text-slate-700 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
              </button>
              <button type="button" id="carousel-next" class="w-10 h-10 rounded-full bg-slate-100 hover:bg-slate-200 flex items-center justify-center transition-colors cursor-pointer relative z-10" aria-label="Next slide">
                <svg class="w-6 h-6 text-slate-700 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </button>
            </div>

            {# Carousel Container #}
            <div class="overflow-hidden">
              <div id="partner-carousel" class="flex transition-transform duration-500 ease-in-out gap-3">
                <div class="flex-shrink-0 w-1/2 sm:w-1/4 flex items-center justify-center">
                  <div class="flex items-center justify-center rounded-2xl bg-white overflow-hidden h-32 w-32">
                    <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?auto=format&fit=crop&w=400&q=80" alt="Partner logo 1" class="h-full w-full object-cover" loading="lazy" />
                  </div>
                </div>
                <div class="flex-shrink-0 w-1/2 sm:w-1/4 flex items-center justify-center">
                  <div class="flex items-center justify-center rounded-2xl bg-white overflow-hidden h-32 w-32">
                    <img src="https://images.unsplash.com/photo-1531297484001-80022131f5a1?auto=format&fit=crop&w=400&q=80" alt="Partner logo 2" class="h-full w-full object-cover" loading="lazy" />
                  </div>
                </div>
                <div class="flex-shrink-0 w-1/2 sm:w-1/4 flex items-center justify-center">
                  <div class="flex items-center justify-center rounded-2xl bg-white overflow-hidden h-32 w-32">
                    <img src="https://images.unsplash.com/photo-1560179707-f14e90ef3623?auto=format&fit=crop&w=400&q=80" alt="Partner logo 3" class="h-full w-full object-cover" loading="lazy" />
                  </div>
                </div>
                <div class="flex-shrink-0 w-1/2 sm:w-1/4 flex items-center justify-center">
                  <div class="flex items-center justify-center rounded-2xl bg-white overflow-hidden h-32 w-32">
                    <img src="https://images.unsplash.com/photo-1521737604893-d14cc237f11d?auto=format&fit=crop&w=400&q=80" alt="Partner logo 4" class="h-full w-full object-cover" loading="lazy" />
                  </div>
                </div>
                <div class="flex-shrink-0 w-1/2 sm:w-1/4 flex items-center justify-center">
                  <div class="flex items-center justify-center rounded-2xl bg-white overflow-hidden h-32 w-32">
                    <img src="https://images.unsplash.com/photo-1545239351-1141bd82e8a6?auto=format&fit=crop&w=400&q=80" alt="Partner logo 5" class="h-full w-full object-cover" loading="lazy" />
                  </div>
                </div>
                <div class="flex-shrink-0 w-1/2 sm:w-1/4 flex items-center justify-center">
                  <div class="flex items-center justify-center rounded-2xl bg-white overflow-hidden h-32 w-32">
                    <img src="https://images.unsplash.com/photo-1553877522-43269d4ea984?auto=format&fit=crop&w=400&q=80" alt="Partner logo 6" class="h-full w-full object-cover" loading="lazy" />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    {# ========================================= #}
    {# SECTION: VANTAGGI (DYNAMIC TABS FROM CMS) #}
    {# ========================================= #}
    {% if data.vantaggi is not empty %}
      <section id="come-funziona-open-badge" class="bg-white py-16 lg:py-20">
        <div class="max-w-6xl mx-auto px-4 sm:px-6">
          <div class="mb-8 text-center">
            <p class="text-xs font-semibold tracking-[0.25em] uppercase text-slate-500 mb-3">Partecipazione, formazione e qualificazione</p>
            <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-slate-900">I Vantaggi dei certificati digitali Open Badge</h2>
          </div>

          {% if data.boxs_edit %}
            <div class="mb-4 flex justify-end">
              <a href="/admin/content/block?destination=home&type=blocco_vantaggi" class="inline-flex items-center gap-2 bg-blue-600 text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg hover:bg-blue-700 transition-all duration-200">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Modifica Vantaggi
              </a>
            </div>
          {% endif %}

          <div data-ob-tabs class="space-y-8">
            {# Tab buttons - equal width, centered text like screenshot #}
            <div class="grid grid-cols-3 text-[11px] sm:text-xs font-medium">
              {% for item in data.vantaggi %}
                <button type="button" 
                  class="ob-tab px-4 sm:px-6 py-4 tracking-[0.12em] uppercase text-center {{ loop.first ? 'bg-[#fdece2] text-slate-900 border-t-2 border-t-blue-600' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' }}" 
                  data-ob-tab="{{ loop.index0 == 0 ? 'design' : (loop.index0 == 1 ? 'publish' : 'track') }}">
                  {{ item.body|striptags|default(item.info|default('Tab ' ~ loop.index)) }}
                </button>
              {% endfor %}
            </div>

            {# Tab panels - each block renders its content #}
            <div class="space-y-12">
              {% for item in data.vantaggi %}
                <div data-ob-panel="{{ loop.index0 == 0 ? 'design' : (loop.index0 == 1 ? 'publish' : 'track') }}" class="ob-tab-panel {{ loop.first ? '' : 'hidden' }} space-y-10 relative">
                  {# Edit button for each tab - only visible to admins #}
                  {% if item.id and user.hasPermission('administer blocks') %}
                    <div class="absolute top-0 right-0 z-50">
                      <a href="/admin/content/block/{{ item.id }}?destination=home" class="inline-flex items-center gap-1 bg-white/95 hover:bg-white text-slate-700 hover:text-slate-900 px-3 py-1.5 rounded-full shadow-lg border border-slate-200 text-xs font-medium transition-all duration-200">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                      </a>
                    </div>
                  {% endif %}
                  {{ drupal_entity('block_content', item.id) }}
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </section>
    {% endif %}

    <!-- ========================================= -->
    <!-- SECTION: ULTIME NOTIZIE                   -->
    <!-- ========================================= -->
    <section id="ultime-notizie" class="py-16 lg:py-20 bg-[#E9F5F6]">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="text-center mb-12">
          <p class="text-xs font-semibold tracking-[0.25em] uppercase text-slate-500 mb-3">Resta aggiornato</p>
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-slate-900">Ultime Notizie</h2>
          {% if data.notizie_edit %}
            <div class="mt-2">{{ data.notizie_edit }}</div>
          {% endif %}
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 mb-10">
          {% if data.notizie %}
            {% for notizia in data.notizie %}
              <article class="bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <div class="aspect-[4/3] bg-gradient-to-br from-blue-100 to-blue-50 overflow-hidden relative">
                  {% if notizia.image and notizia.image.path %}
                    <img src="{{ notizia.image.path }}" alt="{{ notizia.image.alt|default('') }}" class="absolute inset-0 w-full h-full object-cover hover:scale-105 transition-transform duration-300" loading="lazy" />
                  {% else %}
                    <div class="absolute inset-0 flex items-center justify-center">
                      <svg class="w-16 h-16 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                      </svg>
                    </div>
                  {% endif %}
                </div>
                <div class="p-6 space-y-3">
                  <div class="flex items-center gap-2 text-xs text-slate-500">
                    <span>{{ notizia.created }}</span>
                    <span>•</span>
                    <span>Notizie</span>
                  </div>
                  <h3 class="text-lg font-bold text-slate-900 line-clamp-2">{{ notizia.title }}</h3>
                  {% if notizia.sotto_titolo.0.value %}
                    <p class="text-sm text-slate-600 line-clamp-3">{{ notizia.sotto_titolo.0.value }}</p>
                  {% endif %}
                  <a href="{{ notizia.url_object }}" class="inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-700 transition-colors">
                    Leggi di più <span aria-hidden="true" class="ml-1">→</span>
                  </a>
                </div>
              </article>
            {% endfor %}
          {% else %}
            <div class="col-span-3 text-center py-12">
              <p class="text-slate-500">Nessuna notizia disponibile al momento.</p>
            </div>
          {% endif %}
        </div>

        <div class="text-center">
          <a href="/notizie" class="inline-flex items-center justify-center px-8 py-3 rounded-full bg-blue-600 text-white text-sm font-semibold hover:bg-blue-700 transition-colors shadow-md hover:shadow-lg">
            Vedi Tutte le Notizie
            <span aria-hidden="true" class="ml-1">→</span>
          </a>
        </div>
      </div>
    </section>

    <!-- ========================================= -->
    <!-- SECTION: CTA ACCOUNT GRATUITO             -->
    <!-- ========================================= -->
    <section id="cta-account" class="py-20 lg:py-28 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
        <div class="space-y-6">
          <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 leading-tight">
            Inizia oggi a certificare le competenze
          </h2>
          <p class="text-lg sm:text-xl text-slate-700 max-w-2xl mx-auto">
            Crea il tuo account gratuito e scopri come Open Badge può trasformare il modo in cui riconosci e condividi le competenze.
          </p>
          <div class="pt-4">
            <a href="/register" class="inline-flex items-center justify-center px-10 py-4 rounded-full bg-blue-600 text-white text-base sm:text-l font-bold hover:bg-blue-700 transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105">
              CREA UN ACCOUNT Gratuito
              <span aria-hidden="true" class="ml-2">→</span>
            </a>
          </div>
          <p class="text-sm text-slate-600 pt-2">
            Nessuna carta di credito richiesta • Attivazione immediata
          </p>
        </div>
      </div>
    </section>