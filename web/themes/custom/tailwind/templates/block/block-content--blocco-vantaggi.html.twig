 {#
  block-content--blocco-vantaggi.html.twig
  
  Renders a SINGLE blocco_vantaggi tab panel content.
  Matches the exact static HTML structure with same Tailwind classes.
  
  Fields:
  - body: Tab button label (e.g. "Per le scuole...")
  - field_titolo: First section title
  - field_first_body: First section body (HTML with <ul> list)
  - field_first_image: First section image
  - field_link_primo: First section link
  - field_titolo_secondo: Second section title
  - field_secondo_body: Second section body (HTML with <ul> list)
  - field_secondo_image: Second section image
  - field_secondo_link: Second section link
#}

<div class="space-y-16">
  {# First row: text left, image right #}
  <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
    <div class="space-y-4 text-sm sm:text-base text-slate-700">
      {% if content.field_titolo[0] %}
        <h3 class="text-xl sm:text-2xl lg:text-3xl font-bold text-obBlue">{{ content.field_titolo[0]['#context'].value|default(content.field_titolo[0]) }}</h3>
      {% endif %}
      {% if content.field_first_body[0] %}
        <div class="prose prose-slate max-w-none">{{ content.field_first_body[0]['#text']|default(content.field_first_body[0])|raw }}</div>
      {% endif %}
      {% if content.field_link_primo[0] %}
        <div class="pt-2">
          <a href="{{ content.field_link_primo[0]['#url']|default('#') }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-100 transition-colors">
            {{ content.field_link_primo[0]['#title']|default('Watch Product Tour') }}
            <span aria-hidden="true">→</span>
          </a>
        </div>
      {% endif %}
    </div>
    {% if content.field_first_image[0] %}
      <div class="flex justify-center">
        <div class="rounded-3xl overflow-hidden shadow-lg max-w-md field-no-label">
          {{ content.field_first_image[0] }}
        </div>
      </div>
    {% endif %}
  </div>

  {# Second row: image left, text right #}
  <div class="grid gap-10 lg:grid-cols-2 lg:items-center">
    {% if content.field_secondo_image[0] %}
      <div class="flex justify-center">
        <div class="rounded-3xl overflow-hidden shadow-lg max-w-md field-no-label">
          {{ content.field_secondo_image[0] }}
        </div>
      </div>
    {% endif %}
    <div class="space-y-4 text-sm sm:text-base text-slate-700">
      {% if content.field_titolo_secondo[0] %}
        <h3 class="text-xl sm:text-2xl lg:text-3xl font-bold text-obBlue">{{ content.field_titolo_secondo[0]['#context'].value|default(content.field_titolo_secondo[0]) }}</h3>
      {% endif %}
      {% if content.field_secondo_body[0] %}
        <div class="prose prose-slate max-w-none">{{ content.field_secondo_body[0]['#text']|default(content.field_secondo_body[0])|raw }}</div>
      {% endif %}
      {% if content.field_secondo_link[0] %}
        <div class="pt-2">
          <a href="{{ content.field_secondo_link[0]['#url']|default('#') }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full border border-slate-300 text-sm font-medium text-slate-700 hover:bg-slate-100 transition-colors">
            {{ content.field_secondo_link[0]['#title']|default('Watch Product Tour') }}
            <span aria-hidden="true">→</span>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>