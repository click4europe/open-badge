  <header class="bg-white shadow-sm fixed left-0 right-0 site-header" style="z-index: 490;">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-3 flex items-center justify-between gap-6">
      <!-- Logo + Brand -->
      <a href="/" class="flex items-center gap-3">
        <img src="/themes/custom/tailwind/images/public/openbadge-newlogo-blugreen.svg" alt="Open Badge" class="h-10 w-auto" />
      </a>

      <!-- Dynamic main menu (desktop nav + mobile menu + mega dropdowns) -->
      {{ drupal_menu('main', 1, 3, true) }}

      <!-- Actions -->
      <div class="hidden md:flex items-center gap-3 text-xs font-semibold">
        <a href="https://app.open-badge.eu/login" class="px-4 py-1.5 rounded-full border border-emerald-500 text-emerald-600 hover:bg-emerald-50 transition-colors">
          Login
        </a>
        <a href="/#contatti" class="px-5 py-2 rounded-full bg-slate-900 text-white hover:bg-slate-800 flex items-center gap-2 transition-colors">
          Inizia Ora
          <span aria-hidden="true" class="ml-2">â†’</span>
        </a>
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden text-slate-800">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    {% if logged_in and user.hasPermission('administer menu') %}
      <a href="/admin/structure/menu/manage/main" class="hidden md:flex items-center gap-1 absolute top-1 right-2 bg-white/90 hover:bg-white text-slate-400 hover:text-slate-700 px-2 py-0.5 rounded text-[10px] font-medium transition-colors border border-slate-200 shadow-sm" style="z-index: 500;" title="Edit Menu">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
