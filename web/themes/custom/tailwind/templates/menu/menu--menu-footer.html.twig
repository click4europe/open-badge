{#
/**
 * @file
 * Custom menu template for the Footer menu (menu-footer).
 *
 * Each top-level menu item renders as a separate column
 * with its children as links below.
 *
 * Available variables:
 * - items: A nested list of menu items.
 */
#}

<div class="grid grid-cols-2 gap-8">
  {% for item in items %}
    <div class="space-y-3">
      {# Section Header (parent item) #}
      <h4 class="text-xs uppercase tracking-widest text-slate-500 font-semibold">
        {{ item.title }}
      </h4>

      {# Child Links #}
      {% if item.below %}
        <ul class="space-y-2">
          {% for child in item.below %}
            <li>
              <a href="{{ child.url }}" class="text-xs text-slate-400 hover:text-white transition-colors">
                {{ child.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </div>
  {% endfor %}

  {# Edit Menu button under the sections #}
  {% if user.hasPermission('administer menu') %}
    <div class="col-span-2 pt-2">
      <a href="/admin/structure/menu/manage/menu-footer" class="inline-flex items-center gap-1 text-xs text-slate-500 hover:text-white transition-colors">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        Edit Menu
      </a>
    </div>
  {% endif %}
</div>
