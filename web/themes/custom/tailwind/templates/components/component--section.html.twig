{# Base section wrapper component.
   Props:
   - id: optional HTML id for the section
   - background: 'light' | 'muted' | 'dark'
   - full_width: boolean, if true skip container wrapper
   - padding: override padding classes
   - class: extra classes for <section>
   Usage (recommended):
   {% embed '@tailwind/components/component--section.html.twig' with {
     id: 'homepage-hero',
     background: 'light',
   } %}
     {% block content %}
       ... your content ...
     {% endblock %}
   {% endembed %}
#}

{% set background = background|default('light') %}

{% set background_classes = {
  'light': 'bg-white',
  'muted': 'bg-slate-50',
  'dark': 'bg-slate-900 text-white',
  'hero': 'bg-gradient-to-br from-sky-900 via-sky-800 to-sky-600 text-white',
}[background]|default('bg-white') %}

{% set padding_classes = padding|default('py-12 sm:py-16 lg:py-24') %}

<section
  {% if id %}id="{{ id }}"{% endif %}
  class="{{ background_classes }} {{ padding_classes }} {{ class|default('') }}"
>
  {% block section_content %}
    {% if full_width %}
      {{ block('section_inner') }}
    {% else %}
      <div class="container mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        {{ block('section_inner') }}
      </div>
    {% endif %}
  {% endblock %}

  {% block section_inner %}{% endblock %}
</section>
