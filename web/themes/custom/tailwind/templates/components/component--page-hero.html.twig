{# component--page-hero.html.twig
   Reusable hero section for internal pages.
   
   Parameters:
   - title: Page title (required)
   - description: Page description text
   - image: Image URL or path
   - image_alt: Alt text for image (defaults to title)
   - eyebrow: Optional small text above title
   - background_color: Optional custom background color (defaults to #050322)
   
   Usage:
   {% include '@tailwind/components/component--page-hero.html.twig' with {
     title: 'title',
     description: 'description',
     image: '/themes/custom/tailwind/images/public/hero-competenze.jpg',
     background_color: '#5299D8'
   } %}
#}

<section style="background-color: {{ background_color|default('#050322') }};">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-16 lg:py-24 min-h-[400px] flex items-center">
    <div class="grid gap-12 lg:grid-cols-2 items-center w-full">
      <!-- Text -->
      <div class="space-y-6 text-white">
        {% if eyebrow %}
          <p class="font-ui text-obYellow">{{ eyebrow }}</p>
        {% endif %}
        {% if title %}
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold leading-tight">
            {{ title }}
          </h1>
        {% endif %}
        {% if description %}
          <div class="font-body-large text-sm sm:text-base text-slate-200 max-w-xl">
            {{ description|raw }}
          </div>
        {% endif %}
      </div>

      <!-- Image -->
      {% if image %}
        <div class="relative">
          <div class="rounded-3xl overflow-hidden shadow-2xl aspect-[4/3]">
            <img src="{{ image }}" alt="{{ image_alt|default(title) }}" class="w-full h-full object-cover" />
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>
