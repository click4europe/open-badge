{# Reusable card component.
   Props:
   - title: card title (required)
   - description: card description text
   - number: optional numbered badge (e.g., '01', '02')
   - variant: 'default' | 'white' | 'transparent'
   - class: extra classes
   - link: optional link URL
   Usage:
   {% include '@tailwind/components/component--card.html.twig' with {
     number: '01',
     title: 'Card Title',
     description: 'Card description text here.',
     variant: 'default',
   } %}
#}

{% set variant = variant|default('default') %}

{% set variant_classes = {
  'default': 'card',
  'white': 'card bg-white/80',
  'transparent': 'bg-transparent',
}[variant]|default('card') %}

<{% if link %}a href="{{ link }}"{% else %}div{% endif %} class="{{ variant_classes }} flex flex-col gap-2 {{ class|default('') }}">
  {% if number %}
    <span class="text-xs font-semibold text-obLightBlue">{{ number }}</span>
  {% endif %}
  
  {% if title %}
    <h3 class="font-semibold text-sm {% if link %}group-hover:text-obLightBlue transition-colors{% endif %}">{{ title }}</h3>
  {% endif %}
  
  {% if description %}
    <p class="text-xs text-slate-600">{{ description }}</p>
  {% endif %}
  
  {% block card_content %}{% endblock %}
</{% if link %}a{% else %}div{% endif %}>
