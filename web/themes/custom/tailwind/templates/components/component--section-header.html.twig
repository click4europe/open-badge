{# Reusable section header component.
   Props:
   - title: section title (required)
   - description: optional description text
   - cta_label: optional CTA button label
   - cta_url: optional CTA button URL
   - cta_variant: button variant ('primary' | 'secondary')
   - layout: 'stacked' | 'inline' (default 'inline' - title/desc left, CTA right)
   - class: extra classes
   Usage:
   {% include '@tailwind/components/component--section-header.html.twig' with {
     title: 'Section Title',
     description: 'Section description here.',
     cta_label: 'View All',
     cta_url: '/link',
   } %}
#}

{% set layout = layout|default('inline') %}

{% if layout == 'inline' %}
<div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-10 {{ class|default('') }}">
  <div class="max-w-3xl">
    {% if title %}
      <h2 class="text-2xl sm:text-3xl font-bold text-obBlue mb-3">{{ title }}</h2>
    {% endif %}
    {% if description %}
      <p class="text-slate-600 text-sm sm:text-base">{{ description }}</p>
    {% endif %}
  </div>
  {% if cta_label and cta_url %}
    {% include '@tailwind/components/component--button.html.twig' with {
      label: cta_label,
      url: cta_url,
      variant: cta_variant|default('primary'),
      size: 'sm',
    } %}
  {% endif %}
</div>
{% else %}
<div class="text-center max-w-3xl mx-auto mb-10 {{ class|default('') }}">
  {% if title %}
    <h2 class="text-2xl sm:text-3xl font-bold text-obBlue mb-3">{{ title }}</h2>
  {% endif %}
  {% if description %}
    <p class="text-slate-600 text-sm sm:text-base mb-6">{{ description }}</p>
  {% endif %}
  {% if cta_label and cta_url %}
    {% include '@tailwind/components/component--button.html.twig' with {
      label: cta_label,
      url: cta_url,
      variant: cta_variant|default('primary'),
    } %}
  {% endif %}
</div>
{% endif %}
