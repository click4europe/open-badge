{# Hero Section - Matching Home Page Style #}
{{ drupal_entity('block_content', 17) }}

{# Dynamic Pricing Cards Section #}
<section class="py-16 lg:py-24 bg-slate-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    
    {# Section Header #}
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-3">Scegli il piano perfetto per te</h2>
      <p class="text-base text-slate-600 mb-10">Prezzi trasparenti, nessun costo nascosto</p>
      
      {# Monthly/Yearly Toggle #}
      <div class="inline-flex items-center bg-white rounded-full p-1.5 shadow-sm border border-slate-200">
        <button id="monthly-toggle" class="pricing-toggle px-8 py-2.5 rounded-full text-sm font-semibold transition-all duration-200 bg-blue-600 text-white">
          Mensile
        </button>
        <button id="yearly-toggle" class="pricing-toggle px-8 py-2.5 rounded-full text-sm font-semibold transition-all duration-200 text-slate-600 hover:text-slate-900">
          Annuale
        </button>
      </div>
    </div>

    {# Monthly Pricing Cards #}
    <div id="monthly-pricing" class="pricing-section">
      {% if pricing_monthly_cards is not empty %}
        {% if pricing_monthly_edit_url %}
          <div class="text-right mb-3">
            <a href="{{ pricing_monthly_edit_url }}" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
              <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit {{ pricing_monthly_title }}
            </a>
          </div>
        {% endif %}
        <div class="pricing-cards-grid">
          {% for card in pricing_monthly_cards %}
            {{ card }}
          {% endfor %}
        </div>
      {% else %}
        <div class="text-center py-8">
          <p class="text-slate-600">No monthly pricing plans available.</p>
        </div>
      {% endif %}
    </div>

    {# Annual Pricing Cards #}
    <div id="yearly-pricing" class="pricing-section hidden">
      {% if pricing_annual_cards is not empty %}
        {% if pricing_annual_edit_url %}
          <div class="text-right mb-3">
            <a href="{{ pricing_annual_edit_url }}" class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
              <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Edit {{ pricing_annual_title }}
            </a>
          </div>
        {% endif %}
        <div class="pricing-cards-grid">
          {% for card in pricing_annual_cards %}
            {{ card }}
          {% endfor %}
        </div>
      {% else %}
        <div class="text-center py-8">
          <p class="text-slate-600">No annual pricing plans available.</p>
        </div>
      {% endif %}
    </div>
  </div>
</section>

