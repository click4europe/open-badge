<div class="home-page-render">
     <!-- ========================================= -->
    <!-- SECTION: COSA PUOI FARE (FEATURES GRID)   -->
    <!-- ========================================= -->
    <section id="cosa-puoi-fare" class="py-16 lg:py-20 bg-white">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
