{% include '@tailwind/components/component--page-hero.html.twig' with {
  title: data.scheda.title,
  description: data.scheda.sotto_titolo.0.value|default('')
} %}

<article class="bg-slate-50 py-12">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2">
                <!-- Article Header -->
                <header class="mb-8">
                    <div class="flex items-center gap-3 text-sm mb-4">
                        <span class="px-3 py-1 rounded-full font-semibold text-xs" style="background-color: #dbeafe; color: #1d4ed8;">Notizie</span>
                        <time datetime="{{ data.scheda.created }}" class="text-slate-600 font-medium">{{ data.scheda.created }}</time>
                    </div>
                    
                    {% if data.scheda.sotto_titolo.0.value %}
                        <p class="text-xl text-slate-900 font-semibold mb-6 leading-relaxed">{{ data.scheda.sotto_titolo.0.value }}</p>
                    {% endif %}
                </header>
                
                <!-- Featured Image with Fixed Smaller Dimensions -->
                {% if data.scheda.image.path %}
                    <div class="mb-8">
                        <div class="rounded-xl overflow-hidden shadow-md bg-slate-100" style="max-width: 600px; height: 400px;">
                            <img src="{{ data.scheda.image.path }}" alt="{{ data.scheda.image.alt }}" class="w-full h-full object-cover">
                        </div>
                    </div>
                {% endif %}
                
                <!-- Article Content -->
                <div class="bg-white rounded-xl shadow-sm p-8">
                    <div class="prose prose-lg max-w-none text-slate-900">
                        {{ data.scheda.body|raw }}
                    </div>
                </div>
                
                <!-- FAQ Section -->
                {% if data.scheda.field_faq %}
                    <section class="mt-8">
                        <div class="bg-white rounded-xl shadow-sm p-8">
                            <h2 class="text-2xl font-bold text-slate-900 mb-6">Domande Frequenti</h2>
                            <div class="space-y-3" id="faq-container">
                                {% for faq in data.scheda.field_faq %}
                                    <div class="border border-slate-200 rounded-lg overflow-hidden">
                                        <button class="faq-button w-full px-6 py-4 text-left bg-slate-50 hover:bg-slate-100 transition-colors flex justify-between items-center">
                                            <span class="font-semibold text-slate-900">{{ faq.question }}</span>
                                            <svg class="w-5 h-5 text-slate-600 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                            </svg>
                                        </button>
                                        <div class="faq-content hidden px-6 py-4 bg-white border-t border-slate-100">
                                            <div class="prose prose-sm text-slate-900">
                                                {{ faq.answer|raw }}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </section>
                {% endif %}
            </div>
            
            <!-- Sidebar -->
            <aside class="lg:col-span-1">
                <!-- Related News -->
                {% if data.related %}
                    <div class="sticky top-8">
                        <div class="bg-white rounded-xl shadow-sm p-6">
                            <h3 class="text-lg font-bold text-slate-900 mb-5">Ultime Notizie</h3>
                            <div class="space-y-4">
                            {% for news in data.related %}
                                <article class="border border-slate-200 rounded-lg overflow-hidden hover:border-blue-300 transition-all duration-300">
                                    {% if news.image.path %}
                                        <div class="aspect-[4/3] overflow-hidden bg-slate-100 relative">
                                            <img src="{{ news.image.path }}" alt="{{ news.image.alt }}" class="absolute inset-0 w-full h-full object-cover hover:scale-105 transition-transform duration-300">
                                        </div>
                                    {% else %}
                                        <div class="aspect-[4/3] bg-gradient-to-br from-slate-100 to-slate-50 flex items-center justify-center">
                                            <svg class="w-8 h-8 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                                            </svg>
                                        </div>
                                    {% endif %}
                                    <div class="p-4 bg-white">
                                        <div class="flex items-center gap-2 text-xs text-slate-600 mb-2 font-medium">
                                            <span>{{ news.created }}</span>
                                        </div>
                                        <h4 class="font-bold text-slate-900 line-clamp-2 mb-2 text-sm leading-snug">
                                            <a href="{{ news.url_object }}" class="hover:text-blue-600 transition-colors">
                                                {{ news.title }}
                                            </a>
                                        </h4>
                                        {% if news.teaser %}
                                            <p class="text-xs text-slate-700 line-clamp-2 leading-relaxed">{{ news.teaser }}</p>
                                        {% endif %}
                                    </div>
                                </article>
                            {% endfor %}
                            </div>
                            
                            <!-- View All News Button -->
                            <div class="mt-6 pt-6 border-t border-slate-200">
                                <a href="/notizie" class="block w-full text-center px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-semibold text-sm shadow-sm">
                                    Vedi tutte le notizie
                                </a>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </aside>
        </div>
    </div>
</article>