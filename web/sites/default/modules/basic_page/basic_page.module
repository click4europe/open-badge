use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function basic_page_help($route_name, RouteMatchInterface $route_match)
{
  switch ($route_name) {
    // Main module help for the basic_page module.
    case 'help.page.basic_page':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Basic Page render') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_user_login().
 * Redirect users to home page after login.
 */
function basic_page_user_login($account) {
  // Get the current request
  $current_request = \Drupal::request();
  
  // Check if there's a destination parameter (preserve it if exists)
  if (!$current_request->query->has('destination')) {
    // Set the redirect destination to home page
    $current_request->query->set('destination', '/');
  }
}

